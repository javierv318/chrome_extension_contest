{
  "manifest_version": 2,
  "name": "FB Marketplace - Vettx sync extension",
  "version": "1.0",
  "description": "Sync FB Marketplace messages and Vettx API in real-time",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js","node_modules/@elastic/elasticsearch/dist/es5/index.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "https://www.facebook.com/*"
  ]
}